<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/topLogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_50"
        android:gravity="center"
        android:background="#fff"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/save_title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Select One  Option From Below"
            android:gravity="center"
            android:textSize="@dimen/screen_title"
            android:fontFamily="@font/roboto"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#0288d1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_1"
        android:background="#fff"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Camera"
            android:textColor="#000000"
            android:textSize="@dimen/list_item_sl_fontsize" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginStart="@dimen/dim_10"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:textSize="@dimen/list_item_sl_fontsize"
            android:textColor="#000000"
            android:text="Gallery" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/dim_5"
            android:layout_marginRight="@dimen/dim_5"
            android:layout_marginBottom="@dimen/dim_5"
            android:layout_height="match_parent">


                <Button
                    android:id="@+id/textView6"
                    android:layout_marginTop="@dimen/dim_30"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_40"
                    android:layout_weight="0.5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="#0288d1"
                    android:text="Cancel"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false" />


        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>